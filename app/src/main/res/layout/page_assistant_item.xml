<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="@dimen/assistant_imgIcon_size"
        android:layout_height="@dimen/assistant_imgIcon_size"
        android:layout_marginStart="140dp"
        android:layout_marginTop="188dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/white"

        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/lblContent"
        android:layout_width="322dp"
        android:layout_height="170dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="340dp"
        android:text="@string/assistant_assistantDescription"
        android:textSize="@dimen/main_textSize_3x"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>