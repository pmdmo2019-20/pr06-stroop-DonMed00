<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/viewGame"
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:background="@color/primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblWords"
        android:layout_width="124dp"
        android:layout_height="91dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/main_textSize_5x"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblCorrects"
        android:layout_width="124dp"
        android:layout_height="91dp"
        android:layout_marginTop="32dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/main_textSize_5x"
        app:layout_constraintBottom_toBottomOf="@+id/lblWords"
        app:layout_constraintEnd_toStartOf="@+id/lblAttemptOrTime"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toEndOf="@+id/lblWords"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/lblAttemptOrTime"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="4dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/main_textSize_5x"
        app:layout_constraintBottom_toBottomOf="@+id/lblCorrects"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ProgressBar
        android:id="@+id/progressBarGame"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewGame" />

    <TextView
        android:id="@+id/lblWordColors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="304dp"
        android:gravity="center"
        android:text="Yellow"
        android:textAlignment="center"
        android:textSize="@dimen/main_textSize_7x"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewGame" />

    <ImageView
        android:id="@+id/imgRight"
        android:layout_width="174dp"
        android:layout_height="135dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="32dp"
        android:tint="@color/gameBlue"
        android:src="@drawable/ic_right_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imgWrong"
        android:layout_width="174dp"
        android:layout_height="135dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="28dp"
        android:tint="@color/gameRed"
        android:src="@drawable/ic_wrong_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>